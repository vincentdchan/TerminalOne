{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Terminal One",
    "version": "0.0.12"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "process": {
        "all": false,
        "relaunch": true,
        "exit": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "app.terminalone",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "themes",
        "shell_integration",
        "static"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Terminal One",
        "width": 860,
        "height": 600,
        "minWidth": 402,
        "minHeight": 280,
        "fileDropEnabled": false
      }
    ],
    "updater": {
      "active": true,
      "endpoints": [
        "https://api.terminalone.app/checkUpdates?platform={{target}}&arch={{arch}}&current_version={{current_version}}"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIxNDY4OTlGNjEzQzZDNTIKUldSU2JEeGhuNGxHSVRrVzlobkt5RXFwMFo3Tkc5aUd4WUJYcDF5OUYwZDRyZmZhd2oxQSs5ZTYK"
    }
  }
}
